<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <!-- width and height of simulation -->
    <entry key="WIDTH">6000</entry>
    <entry key="HEIGHT">3000</entry>

    <!-- window width and height -->
    <entry key="WWIDTH">1600</entry>
    <entry key="WHEIGHT">900</entry>

    <!-- cell size in pixels, for food squares. Should divide well into Width Height -->
    <entry key="CZ">50</entry>

    <entry key="NUMBOTS">70</entry>                     <!-- initially, and minimally -->
    <entry key="BOTRADIUS">10</entry>                   <!-- for drawing -->
    <entry key="BOTSPEED">0.3</entry>
    <entry key="SPIKESPEED">0.005</entry>               <!-- how quickly can attack spike go up? -->
    <entry key="SPIKEMULT">1</entry>                    <!-- essentially the strength of every spike impact -->
    <entry key="BABIES">2</entry>                       <!-- number of babies per agent when they reproduce -->
    <entry key="BOOSTSIZEMULT">2</entry>                <!-- how much boost do agents get? when boost neuron is on -->
    <entry key="REPRATEH">7</entry>                     <!-- reproduction rate for herbivors -->
    <entry key="REPRATEC">7</entry>                     <!-- reproduction rate for carnivors -->

    <entry key="DIST">150</entry>                       <!-- how far can the eyes see on each bot? -->
    <entry key="METAMUTRATE1">0.002</entry>             <!-- what is the change in MUTRATE1 and 2 on reproduction? lol -->
    <entry key="METAMUTRATE2">0.05</entry>

    <entry key="FOODINTAKE">0.002</entry>               <!-- how much does every agent consume? -->
    <entry key="FOODWASTE">0.001</entry>                <!-- how much food disapears if agent eats? -->
    <entry key="FOODMAX">0.5</entry>                    <!-- how much food per cell can there be at max? -->
    <entry key="FOODADDFREQ">15</entry>                 <!-- how often does random square get to full food? -->

    <entry key="FOODTRANSFER">0.001</entry>             <!-- how much is transfered between two agents trading food? per iteration -->
    <entry key="FOOD_SHARING_DISTANCE">50</entry>       <!-- how far away is food shared between bots? -->

    <entry key="TEMPERATURE_DISCOMFORT">0</entry>       <!-- how quickly does health drain in nonpreferred temperatures (0= disabled. 0.005 is decent value) -->

    <entry key="FOOD_DISTRIBUTION_RADIUS">100</entry>   <!-- when bot is killed, how far is its body distributed? -->

    <entry key="REPMULT">5</entry>                      <!-- when a body of dead animal is distributed, how much of it goes toward increasing birth counter for surrounding bots? -->

</properties>
